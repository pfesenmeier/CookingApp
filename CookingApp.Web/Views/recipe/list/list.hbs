{{!< layout }}
<h1>Recipes</h1>
<table>
    <thead>
        <tr>
            <th scope="col">Title</tr>
        </tr>
    </thead>
    <tbody>
    {{#each recipes }}
        <tr>
            <th scope="row">{{title}}</th> 
            <td>
                <a href="/recipe/{{id}}">View</a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
